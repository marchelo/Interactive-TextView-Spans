<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
            android:state_checked="false"
            android:drawable="@drawable/button_unpressed_unchecked"
            />
    <item
            android:state_checked="true"
            android:drawable="@drawable/button_unpressed_checked"
            />
    <item
            android:state_checked="true"
            android:state_enabled="false"
            android:drawable="@drawable/button_checked_disabled"
            />
    <item
            android:state_checked="false"
            android:state_enabled="false"
            android:drawable="@drawable/button_unchecked_disabled"
            />

</selector>